// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Registration {
  id           String @id @default(cuid())
  email        String
  address      String
  fullName     String
  mobileNumber String

  // Sponsor Breakdown
  enterprise   String
  sponsorName  String
  sponsorPhone String

  // Payment Information
  amount        Int
  paymentStatus PaymentStatus @default(PENDING)
  transactionId String?       @unique

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([mobileNumber])
  @@index([paymentStatus])
  @@index([createdAt])
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  CANCELLED
}
